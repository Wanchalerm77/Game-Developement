package Model;

import java.util.Scanner;

public class Player {

	private String name;
	private Disc.Color disc;
	private int score;

	/*
	 * Constructor creates a Player with a name and a disc
	 */

	public Player(String name, Disc.Color disc) {
		this.name = name;
		this.disc = disc;
		this.score = 0;

	}

	/**
	 * 
	 * @return name
	 */

	public String getName() {
		return name;
	}

	/**
	 * 
	 * @return disc object
	 */
	public Disc.Color getDisc() {
		return disc;
	}

	/**
	 * 
	 * @return score
	 */

	public int getScore() {
		return score;
	}

	/**
	 * Ask the player for input to put the disc in checks if col is nor full
	 * 
	 * 
	 * @param board
	 */

	public void makeMove(Disc.Color[][] board) {

		int columnPosition = 0;
		Disc.Color disc = getDisc();
		System.out.println("Drop a disc (0-6) :");
		try (Scanner in = new Scanner(System.in)) {
			columnPosition = in.nextInt();
			if (canDropDisc(board, columnPosition, disc)) {
				return;

			}
		}

	}

	/**
	 * Checkks a row if it is full and places a disc if it cannot drop a disc it
	 * returns false
	 * 
	 * 
	 * @param board
	 * @param columnPosition
	 * @param disc
	 */
	public boolean canDropDisc(Disc.Color[][] board, int columnPosition, Disc.Color disc) {
		for (int i = board.length; i >= 0; i--) {
			if (board[i][columnPosition] == disc.EMPTY) {
				board[i][columnPosition] = disc;
				return true;

			}

		}
		return false;
	}

}
